<p id="notice"><%= notice %></p>

<h2>
 
  <%= @brewery.name %>

  <% if not @brewery.active %>
	<span class="label label-info">retired</span>
  <% end %>
</h2>

<p><i>
  <strong>Established year:</strong>
  <%= @brewery.year %></i>
</p>

<p>
  <strong>Number of beers:</strong>
  <%= @brewery.beers.count %>
</p>

<p>
<ul>
  <% @brewery.beers.each do |beer| %>
	<li><%= link_to beer.name, beer %></li>
  <% end %>
</ul>
</p>

<p>
  
   <% if @brewery.ratings.empty? %>
	<p>Brewery has not yet been rated!</p>
  <% else %>
	<p>Brewery has <%= pluralize( @brewery.ratings.count, 'rating') %>, average <%= @brewery.average_rating %></p>
  <% end %>  
 
 
</p>

<% if current_user %>

	<%= link_to 'Edit', edit_brewery_path(@brewery), class:"btn btn-info" %>

	<%= link_to 'Destroy', @brewery, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>

	

<% end %>

